{
    "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "module": "es2015",
    "target": "es5",
    "outDir": "dist/js",
    "lib": ["es5", "es2015.promise", "dom", "es2015"],
    "typeRoots": [
        "node_modules/@types"
    ],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false
},
    "include": [
        "src/ts/**/*"
    ]
}
